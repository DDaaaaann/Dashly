{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/schema.json",
    "src/**/*.hbs",
    "assets/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
