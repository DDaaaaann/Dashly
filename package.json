{
  "name": "dashly",
  "version": "0.1.0",
  "description": "A dashboard app to create stunning start pages",
  "bin": {
    "dashly": "./dist/index.js"
  },
  "main": "src/index.ts",
  "scripts": {
    "build": "npx rimraf dist && tsc -p tsconfig.json && tsc-alias && npm run copy:all",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "link": "npm unlink -g && npm link",
    "test": "jest --config jest.config.ts",
    "copy:all": "npm run copy:assets && npm run copy:templates && npm run copy:partials",
    "copy:assets": "cpx 'src/assets/**' 'dist/assets'",
    "copy:templates": "cpx 'src/templates/**' 'dist/templates'",
    "copy:partials": "cpx 'src/partials/**' 'dist/partials'"
  },
  "keywords": [
    "dashboard",
    "startpage"
  ],
  "author": "DDaaaaann",
  "dependencies": {
    "ajv": "^8.17.1",
    "fs-extra": "^11.3.0",
    "handlebars": "^4.7.8",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "cpx": "^1.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.11",
    "typescript": "^5.6.3"
  }
}
