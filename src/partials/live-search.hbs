<!-- Search Component -->
<div id="search-container" class="search-container">
  <div id="search-box" class="search-box">
    <div class="search-icon icon-md">
      <icon name="search"/>
    </div>
    <input
      id="search-input"
      type="text"
      placeholder="Search links, blocks, or sections..."
      class="search-input"
      autocomplete="off"
    >
    <button id="clear-search" class="clear-button icon-md hidden">
      <icon name="clear"/>
    </button>
  </div>

  <!-- Search Results -->
  <div id="search-results" class="search-results hidden"></div>
</div>