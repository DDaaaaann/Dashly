{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "theme": {
      "type": "string",
      "enum": [
        "Night Owl",
        "Emerald Tides"
      ]
    },
    "clock": {
      "type": "boolean"
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "blocks": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "links": {
                  "$ref": "#/$defs/links"
                },
                "searchFields": {
                  "$ref": "#/$defs/searchFields"
                },
                "groups": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "string"
                      },
                      "links": {
                        "$ref": "#/$defs/links"
                      },
                      "searchFields": {
                        "$ref": "#/$defs/searchFields"
                      }
                    },
                    "required": [
                      "title"
                    ]
                  }
                }
              },
              "required": [
                "title"
              ]
            }
          }
        },
        "required": [
          "blocks"
        ]
      }
    }
  },
  "required": [
    "sections"
  ],
  "$defs": {
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "href": {
            "type": "string"
          }
        },
        "required": [
          "title",
          "href"
        ]
      }
    },
    "searchFields": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "parameter": {
            "type": "string"
          },
          "href": {
            "type": "string"
          }
        },
        "required": [
          "title",
          "href"
        ]
      }
    }
  }
}
