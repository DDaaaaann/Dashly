<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{dashboard.title}}</title>
  <style>
      {{{inlineCss}}}
  </style>
</head>
<body>
<header>
  <h1>{{dashboard.title}}</h1>
</header>
{{#each dashboard.sections}}
  <section>
    <h2>{{title}}</h2>
    {{#each blocks}}
      <div class="block">
        <h3>{{title}}</h3>
        {{#if links}}
          <ul class="links">
            {{#each links}}
              <li><a href="{{href}}" target="_blank">{{title}}</a></li>
            {{/each}}
          </ul>
        {{/if}}
        {{#if searchFields}}
          <div class="search-fields">
            {{#each searchFields}}
              <div class="search-field">
                <label>{{title}}</label>
                <input type="text" id="{{@index}}" placeholder="Enter {{parameter}}">
                <button onclick="handleSearch('{{href}}', '{{@index}}')">Search</button>
              </div>
            {{/each}}
          </div>
        {{/if}}
      </div>
    {{/each}}
  </section>
{{/each}}
<script>
    {{{inlineJs}}}
</script>
</body>
</html>
